<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTint="@color/teal_700" >

    <Button
        android:id="@+id/google"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sitetext"
        app:layout_constraintTop_toBottomOf="@+id/yandex" />

    <EditText
        android:id="@+id/sitetext"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Введите название сайта"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gosite"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Перейти"
        app:layout_constraintBottom_toBottomOf="@+id/sitetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sitetext"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/github"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GitHub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sitetext"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/yandex"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yandex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sitetext"
        app:layout_constraintTop_toBottomOf="@+id/github" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Популярные ресурсы"
        android:textSize="10dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sitetext"
        app:layout_constraintTop_toBottomOf="@+id/gosite" />

    <Button
        android:id="@+id/paint"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Наброски"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:icon="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>